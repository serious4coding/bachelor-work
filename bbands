#Zusammenfassen der relevanten Daten in eine neue Tabelle

index <- xts(DAX[,3:5], order.by=as.Date(DAX[,1]))

#Bestimmen einiger Variablen f체r die Funktion

n <- 20
sd <- 2

#Berechnung

outcome <- BollingerB채nder(index)
